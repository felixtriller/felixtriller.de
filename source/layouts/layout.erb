<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv='X-UA-Compatible' content="IE=edge;chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= auto_display_meta_tags(separator: '-') %>

  <!--<link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,400i,500,500i" rel="stylesheet">-->
  <link href="https://fonts.googleapis.com/css?family=Fira+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


  <%= favicon_tag '/favicon.ico' %>

  <%= stylesheet_link_tag 'main' %>
  <%= feed_tag :atom, '/feed.xml', title: 'Atom Feed' %>
</head>
<body class="<%= page_classes %>">

<header class="site-header">
  <nav class="site-nav site-nav--header" role="navigation">
    <% link_to '/', title: data.site.title, class: 'site-nav__home-link' do %>
        <%= image_tag 'whistle.svg' %>
    <% end %>

    <ul class="site-nav__list">
      <% data.menu.each do |item| %>
          <li class="site-nav__item">
            <%= link_to item.title, item.url %>
          </li>
      <% end %>
    </ul>
  </nav>
</header>

<section class="site-content">
  <%= yield %>
</section>

<footer class="site-footer">
  <nav class="site-nav site-nav--footer">
    <ul class="site-nav__list">
      <li class="site-nav__item">
        &copy; Felix Triller
      <li class="site-nav__item">
        <%= link_to 'Impressum', '/impressum/' %>
      </li>
    </ul>
    <ul class="site-nav__list">
      <% data.profiles.each do |item| %>
          <li class="site-nav__item">
            <%= link_to item.title, item.url %>
          </li>
      <% end %>
    </ul>
  </nav>
</footer>

<%= javascript_include_tag 'main' %>

</body>
</html>
